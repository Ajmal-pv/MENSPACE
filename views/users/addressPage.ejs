                    </li>
                </ul>
            </div>
        </div>
       
      
        <div class="col-md-9">
            <div class="osahan-account-page-right shadow-sm bg-white p-4 h-100">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade  active show" id="addresses" role="tabpanel" aria-labelledby="addresses-tab">
                        <div >
                           <a href="addAddress"> <button type="button" class="btn btn-dark" style="float: right;">Add new Address</button></a>
                        <h4 class="font-weight-bold mt-0 mb-4">Manage Address</h4>
                        
                        </div>
                         <% if(userData){ %>
                            <% if(userData.Address.length>0){ %> 
                        <div class="row">
                            <% for(var i=0;i<address.length;i++){ %>
                            <div class="col-md-6">
                                <div class="bg-white card addresses-item mb-4 border border-primary shadow">
                                    <div class="gold-members p-4">
                                        <div class="media">
                                            <div class="mr-3"><i class="icofont-ui-home icofont-3x"></i></div>
                                            <div class="media-body">
                                                <h6 class="mb-1 text-secondary"></h6>
                                                <p class="text-black"> <%= address[i].name %> <br> <%=address[i].address %> , <%=address[i].city %>,<%=address[i].postcode %>,<%=address[i].state %> 
                                                </p>
                                                <p class="mb-0 text-black font-weight-bold"><a class="text-primary mr-3" data-toggle="modal" data-target="#add-address-modal" href="/editAddress?id=<%=address[i]._id  %>"><i class="icofont-ui-edit"></i> EDIT</a> 
                                                    <a class="text-danger" data-toggle="modal" data-target="#delete-address-modal" href="/deleteAddress?id=<%=address[i]._id  %>"><i class="icofont-ui-delete"></i> DELETE</a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        </div>
                        <% }} %>

                    </div>
                   <a href="checkOut"> <button type="button" class="btn btn-dark" style="float: right;">go back</button></a>
                </div>
            </div>
        </div>
       
