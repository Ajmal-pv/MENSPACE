    <script>
    function addToWishlist(proId){
       
        event.preventDefault()
        $.ajax({
              url:'/add-to-wislist',
              data:{
               proId:proId
              },
              method:'POST',
              success: function (response){
             
           if(response.success){
            Swal.fire({
               position: 'top',
                icon: 'success',
                 title: 'Product added to wishlist',
                showConfirmButton: false,
               timer: 1500
                     })
           }else{
            Swal.fire({
               position: 'top',
                icon: 'success',
                 title: 'Already added',
                showConfirmButton: false,
               timer: 1500
                     })
           }
              }

        })

   }

   var selectedValue;
   var  searchValue;

   // sort Products
          const sortSelect = document.getElementById('sort');
            sortSelect.addEventListener('change', (event) => {
             selectedValue = event.target.value;
          toAjax()
        });


        // searching the products
        const searchInput = document.querySelector('#searchField')
        searchInput.addEventListener('input', (event) => {
          event.preventDefault()
          const search = event.target.value
          searchValue = search
          toAjax()
        })

        // Filtering the products
        // $('.dropdown-item2').click(function (e) {
        //   e.preventDefault();
        //   categoryId = $(this).data('category');
        //   alert( categoryId)
        //   toAjax()
        // })
        let categoryId

            const categories = document.querySelectorAll('.category_fliter')
            categories.forEach((category)=>{
                category.addEventListener('click',(e)=>{
                    e.preventDefault()
                    categoryId =category.getAttribute('data-category')
                    toAjax()
                })
            })


        function toAjax(){
           
            $.ajax({
            url: '/shop',
            data: { 
              sort: selectedValue,
              search:searchValue,
              isRender: true,
              categoryId
            },
            method: 'get',
            success: (response) => {
                
               
              
              let html = ""
              for(let i=0;i<response.productList.length;i++){
                
                html += `
                <div class="col-lg-4 col-md-6 col-sm-6"  >
                            <div class="product__item">
                                
                                <div class="product__item__pic"   id='product-image' style="width: 220px;">
                                <img src="/imagess/${response.productList[i].image[0]}" alt="" style="width: 100%; height: 100%;">
                                    <ul class="product__hover">
                                        <li><a href="" onclick="addToWishlist('${response.productList[i]._id}')" ><img src="/images/icon/heart.png" alt="" > <span>Add to wishlist</span></a></li>
                                        <li><a href=""><img src="/images/icon/compare.png" alt=""> <span>Add to cart</span></a>
                                        </li>
                                        
                                    </ul>
                                </div>
                                <div id="mouse-overlay"></div>
                                 <div id="overlay"></div>
                                



                                <div class="product__item__text">
                                    <h6>${response.productList[i].name}</h6>
                                    <h6>${response.productList[i].discription}</h6>
                                    
                                    <div class="rating">
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                    </div>
                                    <h5>${response.productList[i].price}</h5>
                                    <a href="/product-detail?id=${response.productList[i]._id}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                        ${response.productList[i].name}
                                   </a> 
                                   
                                   
                                   

                                    <div class="product__color__select">
                                        <label for="pc-4">
                                            <input type="radio" id="pc-4">
                                        </label>
                                        <label class="active black" for="pc-5">
                                            <input type="radio" id="pc-5">
                                        </label>
                                        <label class="grey" for="pc-6">
                                            <input type="radio" id="pc-6">
                                        </label>
                                    </div>
                                </div>
                            </div>
                            </div>
                        `
              }

              document.getElementById('product').innerHTML = html
            }
            })
        }
</script>

