
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="/adminhome/style.css">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

	<title>AdminHub</title>
	
</head>
<body>

 <!-- section -->

    <section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bxs-smile'></i>
			<span class="text">AdminHub</span>
		</a>
		<ul class="side-menu top">
			<li >
				<a href="home">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a href="category">
					<i class='bx bxs-shopping-bag-alt' ></i>
					<span class="text">Category</span>
				</a>
			</li>
			<li >
				<a href="products">
					<i class='bx bxs-doughnut-chart' ></i>
					<span class="text">Products</span>
				</a>
			</li>
			<li>
				<a href="user">
					<i class='bx bxs-message-dots' ></i>
					<span class="text">User management</span>
				</a>
			</li>
			<li class="active">
				<a href="order">
					<i class='bx bxs-message-dots' ></i>
					<span class="text">order management</span>
				</a>
			</li>
			
		</ul>
		<ul class="side-menu">
			
			<li>
				<a href="/admin/logout" class="logout">
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>

	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="img/people.png">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Orders</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Orders</a>
						</li>
					</ul>
				</div>
				
				<a href="addproduct" class="btn-download">
					<i class='bx bxs-cloud-download' ></i>
					<span class="text">Add new product</span>
				</a>
			</div>


            <div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Order details</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
				     <% for(i=0;i<products.length;i++){ %>
						<div class="card" style="width: 18rem; display:inline-flex ;">
						<img class="card-img-top" src="/imagess/<%= products[i].image[0] %>" alt="Card image cap">
						<div class="card-body">
						  <h5 class="card-title"><%= products[i].name %></h5>
						  <p class="card-text"> created at : <%= orderData.createdDate %></p>
						</div>
						<ul class="list-group list-group-flush">
						  <li class="list-group-item">quantity:<%= orderData.products[i].quantity %></li>
						  <li class="list-group-item">price:<%= products[i].price %></li>
						  <li class="list-group-item"></li>
						</ul>
						<% } %>
						<form action="" method="post">
						order status:
						<select name="statusChange" class="form-control" id="statusChange">
							<option value="<%= orderData.status %>"><%= orderData.status %></option>
							<option style="color: blue;" value="ordered">Ordered</option>
							<option style="color: darkgreen;" value="delivered">Delivered</option>
							<option style="color: crimson;" value="Cancelled">Cancelled</option>
							
						  </select>

						  payment status:
						<select name="paymentChange" class="form-control" id="paymentChange">
							<option value="<%= orderData.paymentStatus  %>"><%= orderData.paymentStatus %></option>
							<option style="color: blue;" value="pending">pending</option>
							<option style="color: darkgreen;" value="success">success</option>
							<option style="color: crimson;" value="Refunded">Refunded</option>
							
						  </select>
						  
					  </div>
					  
					  
					 <div class="pt-3 d-flex justify-content-center">
						<button class="btn btn-outline-success">submit</button>
					 </div>
					</form>
					  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>