	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="img/people.png">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Orders</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Orders</a>
						</li>
					</ul>
				</div>
				
				
			</div>


            <div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Order details</h3>
						
					</div>
				     
						<table id="orderTable">
							<thead>
								<tr>
									<th>Name</th>
									<th>Images</th>
									<th>created Date</th>
									<th>quantity</th>
									<th>price</th>  
								
							</tr>
							</thead>
							<tbody>
								
				
					<% for(i=0;i<products.length;i++){ %>
							 <tr>
									<td>
										<p><%= products[i].name %> </p>
									</td>
									<td><img src="/imagess/<%= products[i].image[0] %>" alt=""></td>
									<td> <p><%= orderData.createdDate.toLocaleDateString() %>     </p> </td>
									<td> <p> <%= orderData.products[i].quantity %></p></td>
									<td><p> <%= orderData.products[i].sellingPrice %> </p></td>
								<% } %>	 
	
						
							
			   
							
						
				  
				  
							</tbody>
						</table>
						<form action="" method="post">
						<div class="row">
							<div class="col-md-2">
							  <!-- <select name="statusChange" class="form-control" id="statusChange">
								<option value="<%= orderData.status %>"><%= orderData.status %></option>
								<option style="color: blue;" value="Placed">Placed</option>
								<option style="color: darkgreen;" value="Shipped">Shipped</option>
								<option style="color: darkgreen;" value="Out-for-delivery">Out for delivery</option>
								<option style="color: darkgreen;" value="Delivered">Delivered</option>
								<option style="color: crimson;" value="Cancelled">Cancelled</option>
								<option style="color: crimson;" value="Returned">Returned</option>
							  </select>  -->
							  <% if (orderData.status=="returneProcessing" ){%>
                                <select name="statusChange" id="" class="form-control">
									<option value="<%= orderData.status %>"><%= orderData.status %></option>
                                    <option value="returnApproved">
                                        Return Approved
                                    </option>

                                    <option value="returnRejucted">
                                        Return Rejuct
                                    </option>
                                </select>
                                <% } else if(orderData.status == "returnApproved"){%>
                                    <select name="statusChange" id="" class="form-control">
										
                                        <option value="returnApproved">
                                            Return Approved
                                        </option>
                                    </select>
                                    <%} else if (orderData.status == "returnRejucted") {%>
                                        <select name="statusChange" id="" class="form-control">
											
                                            <option value="returnRejucted">
                                                Return Rejucted
                                            </option>
                                        </select>
                                <% }else if(orderData.status=="returned" ){ %>
                                    <select name="statusChange" id="" class="form-control">
										
                                        <option value="approved">
                                            Return Approved
                                        </option>
                                    </select>
                                   
                                        <%} else if(orderData.status == "Delivered" ) {%>
                                            <select name="statusChange" id="" class="form-control ">
												
                                                <option value="Delivered">
                                                order Delivered
                                                </option>
                                            </select>
											<% }else if(orderData.status !="Cancelled" ) {%>
												<select  name="statusChange" id="" class="form-control ">
													<option value="<%= orderData.status %>"><%= orderData.status %></option>
													<option value="Placed">
													   
													   Placed
													</option>
		
													<option value="Shipped">
														Shipped
													</option>
		
													<option value="Out-for-delivery" >
														Out-for-delivery
													</option>
		
		
													<option value="Delivered">
														Delivered
													</option>
												</select>

                                            <%} else {%>
												<select name="statusChange" id="" class="form-control ">
												
													<option value="Cancelled">
													order Cancelled
													</option>
												</select>
												<% } %>
							</div>
							<div class="col-md-2">
							  <select name="paymentChange" class="form-control" id="paymentChange">
								<option value="<%= orderData.paymentStatus  %>"><%= orderData.paymentStatus %></option>
								<option style="color: blue;" value="pending">pending</option>
								<option style="color: darkgreen;" value="Charged">Charged</option>
								<option style="color: crimson;" value="Refunded">Refunded</option>
							  </select>
							</div>
							<div class="col-md-4">
							  <button class="btn btn-outline-success">submit</button>
							</div>
						  </div>
						</form>

						
				</div>
			</div>
						
						
						
						
								
