
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="/adminhome/style.css">

	<title>AdminHub</title>
</head>
<body>


	<!-- SIDEBAR -->
    <section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bxs-smile'></i>
			<span class="text">AdminHub</span>
		</a>
		<ul class="side-menu top">
			<li >
				<a href="home">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a href="category">
					<i class='bx bxs-shopping-bag-alt' ></i>
					<span class="text">Category</span>
				</a>
			</li>
			<li>
				<a href="products">
					<i class='bx bxs-doughnut-chart' ></i>
					<span class="text">Products</span>
				</a>
			</li>
			<li  class="active">
				<a href="user">
					<i class='bx bxs-message-dots' ></i>
					<span class="text">User management</span>
				</a>
			</li>
			<li>
				<a href="order">
					<i class='bx bxs-message-dots' ></i>
					<span class="text">order management</span>
				</a>
			</li>
			<li>
				<a href="/admin/banners">
					<i class='bx bxs-message-dots' ></i>
					<span class="text">Banner management</span>
				</a>
			</li>
			<li>
				<a href="coupon">
					<i class='bx bxs-message-dots' ></i>
					<span class="text">coupon management</span>
				</a>
			</li>
			
		</ul>
		<ul class="side-menu">
			
			<li>
				<a href="/admin/logout" class="logout">
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>

	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<a href="#" class="nav-link">User</a>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="img/people.png">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>User</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">user</a>
						</li>
					</ul>
				</div>
				<a href="" class="btn-download">
					<i class='bx bxs-cloud-download' ></i>
					<span class="text"></span>
				</a>
			</div>


            <div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Users</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
				
        
        
          <table>
						<thead>
							<tr>
								<th>Name</th>
								<th>email</th>
								<th>mobile</th>
                                <th> action </th>
							</tr>
						</thead>
						<tbody>
              <% if(userData.length >0){
                for(let i=0;i<userData.length;i++){
                  %>
                  <tr>
								<td>
									<p><%= userData[i].name %> </p>
								</td>
								<td> <p> <%= userData[i].email %></p></td>
                                <td> <%= userData[i].mobile %></td>
                                 <td>   <p><% if(userData[i].is_blocked == 0){%>
                                        <a href="/admin/blockUser?id=<%= userData[i]._id%>"onclick="return confirm_alert(this)"><span class="status" style="background-color: green;">Active</span></a><script type="text/javascript">
function confirm_alert(node) {
    return confirm("Do you want to do this action");
}
</script>
                                        <%}else{%>
                                            <a href="/admin/blockUser?id=<%= userData[i]._id%>"onclick="return confirm_alert(this)"><span class="status" style="background: red;">Blocked</span></a>
                                            <%}%></p>  </td>

								
							</tr>
							<%
                }
              } %>
						
							
						</tbody>
					</table>
      


				
			
		
		</main>
		<!-- MAIN -->
	</section>
	
	

	<script src="/adminhome/script.js"></script>
</body>
</html>
